<UserControl x:Class="ScrollToInSolutionExplorer.ScrollToInSolutionExplorerOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ScrollToInSolutionExplorer"
             mc:Ignorable="d" d:DesignHeight="200" d:DesignWidth="300"
             d:Background="White"
             >
    <StackPanel 
        Margin="10"
        >
        <TextBlock
            FontSize="12" 
            FontWeight="Bold" 
            Text="Scroll To In Solution Explorer Options"
            Margin="0,0,0,10"
        />
        <StackPanel
            Margin="6,0,0,0"
            >
            <CheckBox 
                x:Name="IsVisibleInToolMenu"
                Content="{x:Static local:ScrollToInSolutionExplorerOptionsPage.IsVisibleInToolMenuHeader}" 
                Margin="0,5"
            />
            <CheckBox 
                x:Name="IsVisibleInDocumentTabMenu" 
                Content="{x:Static local:ScrollToInSolutionExplorerOptionsPage.IsVisibleInDocumentTabMenuHeader}" 
                Margin="0,5"
            />
        </StackPanel>
    </StackPanel>
</UserControl>
